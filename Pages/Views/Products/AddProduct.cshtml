@page
@model TheOfficeFurnitureWarehouse.Pages.Views.Products.AddProductModel
@{
}

<form method="post">
    <div class="form-group">
        <label asp-for="Product.Name"></label>
        <input class="form-control" asp-for="Product.Name" />
        <span class="text-danger" asp-validation-for="Product.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.ProductType"></label>
        <select class="form-control" asp-for="Product.ProductType" asp-items="Model.ProducTypes"></select>
    </div>
    <div class="form-group">
        <label asp-for="Product.StandardPrice"></label>
        <input class="form-control" asp-for="Product.StandardPrice" />
        <span class="text-danger" asp-validation-for="Product.StandardPrice"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.Quantity"></label>
        <input class="form-control" asp-for="Product.Quantity" />
        <span class="text-danger" asp-validation-for="Product.Quantity"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>