@page "{productId:Guid}"
@model TheOfficeFurnitureWarehouse.Pages.Views.Products.EditProductModel
@{
}

<h2>Editing @Model.Product.Name - @Model.Product.ProductType</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Product.Name"></label>
        <input class="form-control" asp-for="Product.Name" readonly="readonly"/>
    </div>
    <div class="form-group">
        <label asp-for="Product.ProductType"></label>
        <input class="form-control" asp-for="Product.ProductType" readonly="readonly" />
    </div>
    <div class="form-group">
        <label asp-for="Product.Price"></label>
        <input class="form-control" asp-for="Product.Price" />
        <span class="text-danger" asp-validation-for="Product.Price"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.Quantity"></label>
        <input class="form-control" asp-for="Product.Quantity" />
        <span class="text-danger" asp-validation-for="Product.Quantity"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>