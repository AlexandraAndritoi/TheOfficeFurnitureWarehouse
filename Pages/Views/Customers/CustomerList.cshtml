@page
@model TheOfficeFurnitureWarehouse.Pages.Views.Customers.CustomerListModel
@{
}

<h1>Customers</h1>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Discount</th>
    </tr>
    @foreach(var customer in Model.Customers)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.Address</td>
                <td>@customer.Discount</td>
            </tr>
        }
</table>

<a class="btn btn-primary" asp-page="./AddCustomer">Add new</a>